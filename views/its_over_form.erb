  <body >
    <div class="container-fluid" 
      style=" 
        display: flex; flex-direction: column;
        align-items: center; 
        justify-content: center;
        margin:10% auto;
        width:100%; 
        height:100%
      "
    >
    <input id="search" 
      style=" padding: 4px;width:60%; 
        height:75px
      "
      type="text" 
      name="" 
      value="" 
      placeholder="Search Location" 
      autocomplete="off"
    >
      <div id="options" 
        style=" position: relative; 
          top: 0px;
          display:block; 
          width:60%; 
          overflow:hidden; 
          border: 1px solid gray; 
          border-top:0px; 
          padding:4px
        "
      >
      </div>
    </div>
  </body>
    <script>
    var access_token='<%= $apikey %>'

    $('#options').hide()
    $('#search').keyup(function(e){
      var value= $(this).val();
      if($(this).val().length){
        $('#options').show()
        var test='https://api.mapbox.com/geocoding/v5/mapbox.places/'+ value +'.json?access_token='+access_token
        $('#options').html('')
        $.get(test)
        .then(data=>
          {
            var x =data.features.map(x=> x= x.place_name);
            $('#options').append(`
              <h6   style='padding:4px'>
                ${x[0]}
              </h6>
              <h6   style='padding:4px'>
                ${x[1]}
              </h6>
              <h6   style='padding:4px'>
                ${x[2]}
              </h6>
              <h6   style='padding:4px'>
                ${x[3]}
              </h6>
              <h6   style='padding:4px'>
                ${x[4]}
              </h6>
            `)
            $('h6').click(function(e){
              e.preventDefault()
              $('#search').val($(this).text())
              }
            )
          }
        )
    }else{
      $('#options').hide()
    }
    }
    )

  </script>

</center>
